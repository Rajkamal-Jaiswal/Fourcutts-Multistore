<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.LoginActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fourcuts"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ui">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/logo" />

                <TextView
                    android:id="@+id/wel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="45dp"
                    android:fontFamily="sans-serif"
                    android:padding="5dp"
                    android:text="Welcome User"
                    android:textColor="@color/fourcuts"
                    android:textSize="20dp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/wel2"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/wel"
                    android:layout_marginLeft="25dp"
                    android:alpha=".7"
                    android:fontFamily="sans-serif"
                    android:padding="6dp"
                    android:text="@string/login_string"
                    android:textColor="@color/fourcuts"
                    android:textSize="14sp"
                    android:textStyle="normal" />


                <EditText
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/wel2"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="25dp"
                    android:alpha=".8"
                    android:background="@drawable/bg_back1"
                    android:fontFamily="sans-serif"
                    android:hint="Enter Mobile Number"
                    android:padding="14sp"
                    android:textColorHint="@color/black" />


                <Button
                    android:id="@+id/login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/phone"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/a_button_4"
                    android:fontFamily="sans-serif"
                    android:onClick="GOTODashboard"
                    android:padding="10dp"
                    android:text="Sign In"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>