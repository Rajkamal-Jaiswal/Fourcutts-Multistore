<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="400dp"
        android:layout_margin="10dp"
        android:layout_height="140dp"
        >

      <RelativeLayout
          android:layout_width="match_parent"
          android:gravity="center"
          android:layout_height="match_parent"
          >

          <LinearLayout
              android:layout_width="140dp"
              android:layout_alignParentStart="true"
              android:id="@+id/img_container"
              android:layout_height="match_parent"
              >

              <ImageView
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:src="@drawable/eggs"
                  android:scaleType="centerCrop"
                  />

          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_toRightOf="@id/img_container"
              android:orientation="vertical"
              >

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:padding="10dp"
                  android:text="Boneless Chicken"
                  android:textColor="@color/fourcuts"
                  android:textSize="16sp"
                  android:textStyle="bold"
                  />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="â‚¹ 349 / 500gms"
                  android:padding="10dp"
                  android:textColor="@color/fourcuts"
                  android:textSize="16sp"
                  android:textStyle="bold"
                  />

              <LinearLayout
                  android:id="@+id/buy"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_below="@+id/priceperqty"
                  android:layout_toRightOf="@id/food_img"
                  android:gravity="center"
                  android:padding="10dp"
                  android:orientation="horizontal">

                  <ImageView
                      android:layout_width="30dp"
                      android:layout_height="30dp"
                      android:src="@drawable/ic_baseline_shopping_bag_24"
                      app:tint="@color/fourcuts" />

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Buy"
                      android:textColor="@color/fourcuts"
                      android:textSize="16sp"
                      android:textStyle="bold" />

              </LinearLayout>



          </LinearLayout>


      </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>